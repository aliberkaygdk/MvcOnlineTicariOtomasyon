@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Faturaid</td>
            <td>@k.FaturaSeriNo</td>
            <td>@k.FaturaSıraNo</td>
            <td>@k.VergiDairesi</td>
            <td>@k.FaturaTarih</td>
            <td>@k.Saat</td>
            <td>100</td>
            <td>@k.TeslimEden</td>
            <td>@k.TeslimAlan</td>
            
            <td><a href="/Departman/DepartmanGetir/@k.Faturaid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@k.Faturaid" class="btn btn-success" style="background-color:cornflowerblue; color:black;">Detay</a></td>
        </tr>
    }

</table>

<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>

